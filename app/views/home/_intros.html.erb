<section id="intro" class="bg-scb-gray py-16">
  <div class="container mx-auto p-3">
    <div class="flex flex-col items-center justify-center py-16">
      <h1 class="text-4xl font-bold mb-5 font-poppins font-light tracking-normal"><%= intros.title %></h1>
      <p class="text-lg mb-5"><%= intros.body %></p>
      <%= image_tag(intros.photo_one, :class => "h-2/3 w-2/3 rounded-2xl mb-5", :alt => "office") %>
      <%= image_tag(intros.photo_two, :class => "h-1/2 w-1/2 rounded-2xl", :alt => "office lady") %>
    </div>
    <%= link_to 'Edit', edit_intro_path(intros.id), data: { turbo_frame: 'intros' } %>
  </div>
</section>
