<div class="p-6">
  <%= link_to 'Create Section', new_section_path, class: "bg-scb-gray text-scb-black rounded-lg p-3 m-3 ml-0" %>
</div>

<% sections.each do |section| %>
  <% button_bg_class = button_class_for_background(section.background_colour) %>
  <% button_text_class = button_class_for_text(button_bg_class) %>

  <section data-scroll-target="<%= section.name.downcase %>" id="<%= dom_id(section) %>" class="bg-<%= section.background_colour %> py-16">
    <div class="container mx-auto p-3">
      <div class="flex flex-col items-center justify-center py-16 text-center">
        <% unless section.hide_title %>
          <h1 class="text-<%= section.title_colour %> <%= section.title_size %> font-bold mb-5 font-poppins font-bold tracking-normal"><%= section.title %></h1>
        <% end %>

        <% if section.reviews %>
          <%= render 'reviews', locals: "reviews: @reviews"%>
        <% end %>

        <% unless section.reviews %>
          <h2 class="text-<%= section.body_text_colour %> <%= section.body_text_size %> text-<%= section.link_colour %> <%= section.alignment %> font-poppins"><%= section.body %></h2>
        <% end %>
      </div>

      <div class="flex gap-3">
        <%= link_to 'Edit', edit_section_path(section), class: "#{button_bg_class} #{button_text_class} rounded-lg p-3" %>
        <%= link_to "Delete", section_path(section), "data-turbo-method": :delete, "data-turbo-confirm": "Are you sure?", class: "bg-red-700 rounded-lg p-3 text-scb-white" %>

        <% if section.reviews %>
          <%= link_to 'Edit Reviews', edit_review_path(section), class: "#{button_bg_class} #{button_text_class} rounded-lg p-3" %>
          <%= link_to 'Create Review', new_review_path(section), class: "#{button_bg_class} #{button_text_class} rounded-lg p-3" %>
        <% end %>
      </div>
    </div>
  </section>
<% end %>