<div class="p-6">
<%= link_to 'Create Section', new_section_path, class:  "bg-scb-gray text-scb-black rounded-lg p-3 m-3 ml-0" %>
</div>

  <% sections.each do |section| %>

    <% button_bg_class = button_class_for_background(section.background_colour) %>
    <% button_text_class = button_class_for_text(button_bg_class) %>

    <section id="<%= section.name.downcase %>" class="bg-<%= section.background_colour %> py-16" data-turbo-frame="<%= dom_id(section) %>">
      <div class="container mx-auto p-3">
        <div class="flex flex-col items-center justify-center py-16 text-center">
          <% unless  section.hide_title %>
            <h1 class="text-<%= section.title_colour %> <%= section.title_size %> font-bold mb-5 font-poppins font-bold tracking-normal"><%= section.title %></h1>
          <% end %>
          <h2 class="text-<%= section.body_text_colour %> <%= section.body_text_size %> text-<%= section.link_colour %> font-poppins text-center"><%= section.body %></h2>
        </div>

        <%= link_to 'Edit', edit_section_path(section), class: "#{button_bg_class} #{button_text_class} rounded-lg p-3", data: { turbo_frame: 'sections' } %>
        <div data-controller="dialog" data-action="click->dialog#backdropClose" class="p-3">
          <dialog data-dialog-target="dialog">
            <p>Are you sure you want to delete this section?</p>

            <%= link_to "Delete", section, method: :delete, class: "mt-6 bg-red-700 rounded-lg p-3 text-scb-white", data: { turbo_frame: '_top',  confirm: 'Are you sure you want to delete this section?' } %>
            <button type="button" data-action="dialog#close" autofocus>Cancel</button>
          </dialog>

          <button type="button" data-action="dialog#open">Delete</button>
        </div>
      </div>
    </section>
  <% end %>