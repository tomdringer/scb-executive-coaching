<% if service.nil? %>
  <%= link_to 'Create Service', new_service_path %>
<% else %>

  <% button_bg_class = button_class_for_background(service.background_colour) %>
  <% button_text_class = button_class_for_text(button_bg_class) %>

  <section id="services" class="bg-<%= service.background_colour %> py-16">
    <div class="container mx-auto p-3">
      <div class="flex flex-col items-center justify-center py-16">
        <% unless service.hide_title %>
          <h1 class="text-<%= service.title_colour %> <%= service.title_size %> font-bold mb-5 font-poppins font-bold tracking-normal"><%= service.title %></h1>
        <% end %>
        <h2 class="text-<%= service.body_text_colour %> <%= service.body_text_size %> font-poppins font-bold text-center"><%= service.body %></h2>

        <% if service.photo_one.attached? %>
          <%= image_tag(service.photo_one, class: "h-2/3 w-2/3 rounded-2xl mb-5", alt: "office") %>
        <% end %>

        <% if service.photo_two.attached? %>
          <%= image_tag(service.photo_two, class: "h-1/2 w-1/2 rounded-2xl", alt: "office lady") %>
        <% end %>
      </div>

      <%= link_to 'Edit', edit_service_path(service), class: "#{button_bg_class} #{button_text_class} rounded-lg p-3", data: { turbo_frame: 'services' } %>
    </div>
  </section>
<% end %>