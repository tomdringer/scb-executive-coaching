<% content_for :meta_title, "Admin" %>
<% content_for :meta_description, "Admin Coaching" %>

<div class="container mx-auto p-6 max-w-7xl">
  <h1 class="text-xl font-bold mb-6 font-poppins">Admin Dashboard</h1>

<div class="flex mb-5 gap-6">
  <div class="menu-builder-section bg-gray-100 p-6 rounded-md shadow-md">

	<h2 class="text-lg font-semibold mb-4">Courses</h2>

	<div class="text-4xl text-center">
	  <%= @coaching.count %>
	</div>
  </div>

  <div class="menu-builder-section bg-gray-100 p-6 rounded-md shadow-md">
	<h2 class="text-lg font-semibold mb-4">Articles</h2>

	<div class="text-4xl text-center">
		<%= @blogs.count %>
	</div>
  </div>

  <div class="menu-builder-section bg-gray-100 p-6 rounded-md shadow-md">
	<h2 class="text-lg font-semibold mb-4">Reviews</h2>

	<div class="text-4xl text-center">
		<%= @reviews.count %>
	</div>
  </div>

  <div class="menu-builder-section bg-gray-100 p-6 rounded-md shadow-md">
	<h2 class="text-lg font-semibold mb-4">Resources</h2>

	<div class="text-4xl text-center">
		<%= @resources.count  %>
	</div>

  </div>

  <div class="menu-builder-section bg-gray-100 p-6 rounded-md shadow-md">
	<h2 class="text-lg font-semibold mb-4">Policies</h2>

	<div class="text-4xl text-center">
	  <%= @policies.count %>
	</div>
  </div>

  <div class="menu-builder-section bg-gray-100 p-6 rounded-md shadow-md">
	<h2 class="text-lg font-semibold mb-4">Categories</h2>

	<div class="text-4xl text-center">
	  <%= @categories.count %>
	</div>
  </div>

</div>

  <div class="menu-builder-section bg-gray-100 p-6 rounded-md shadow-md w-50">
	<h2 class="px-6 text-lg font-semibold mb-2 font-poppins">Sections</h2>
	<%= render partial: 'admin/dashboard/partials/sections', locals: { sections: @sections } %>

	<h2 class="px-6 text-lg font-semibold mb-2 font-poppins">Menu Builder</h2>
	<%= render partial: 'admin/dashboard/partials/menu_builder', locals: { sections: @home_sections } %>

	<h2 class="px-6 text-lg font-semibold mb-2 font-poppins">Coaching</h2>
	<%= render partial: 'admin/dashboard/partials/coaching', locals: { coaching: @coaching } %>

	<h2 class="px-6 text-lg font-semibold mb-2 font-poppins">Categories</h2>
	<%= render partial: 'admin/dashboard/partials/categories', locals: { category: @categories } %>

	<h2 class="px-6 text-lg font-semibold mb-2 font-poppins">Policies</h2>
	<%= render partial: 'admin/dashboard/partials/policies', locals: { policy: @policies } %>

  </div>
</div>
