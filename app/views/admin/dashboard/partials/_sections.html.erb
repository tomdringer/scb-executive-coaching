<div class="p-6 max-w-7xl mx-auto bg-gray-100 rounded-md space-y-2">

  <table class="table-fixed min-w-full divide-y divide-gray-300 border border-gray-300 mb-6">
	<thead class="bg-gray-50 w-full">
	<tr>
	  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">Name</th>
	  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-4/6">Title</th>
	  <th class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6 text-center">Actions</th>
	</tr>
	</thead>
	<tbody class="bg-white divide-y divide-gray-200 w-full" id="categories">
	<% @sections.each do |section| %>
	<tr>
		<td class="px-6 w-1/6 table-cell whitespace-nowrap"><%= section.name %></td>
	  	<td class="px-6 w-4/6 whitespace-nowrap"><%= section.title.truncate(30) %></td>
	  	<td class="px-8 py-4 w-1/6 whitespace-nowrap text-sm font-medium text-center">
	  		<%= link_to "Edit", edit_section_path(section), class: "p-3 bg-scb-blue text-white py-2 px-4 rounded mr-2" %>
	  		<%= link_to "Delete", section, method: :delete, class: "p-3 bg-red-700 text-white py-2 px-4 rounded" %>
		</td>
	</tr>
	<% end %>
	</tbody>
  </table>
  <%= link_to "Add new section", new_section_path, class: "bg-scb-blue text-white py-2 px-4 rounded" %>
</div>
