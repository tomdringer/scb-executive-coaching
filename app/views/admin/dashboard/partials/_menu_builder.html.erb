<div>
  <ul class="flex flex-col bg-gray-100 p-4 rounded-md space-y-2" data-menu-builder-target="list" data-controller="menu-builder">
    
    <% @menu_sections.each do |section| %>
      <%= content_tag :li, data: {id: section.id}, class:"flex items-center gap-3 p-2 bg-white border border-gray-300 rounded-md cursor-pointer" do %>
        <span class="drag-handle cursor-grab text-gray-500 hover:text-gray-800">||</span>
        <a href="<%= root_path %>#<%= section.name.downcase %>" class="block text-gray-800 font-medium">
          <%= section.name %>
        </a>
      <% end %> 
    <% end %>

  </ul>  
</div>
