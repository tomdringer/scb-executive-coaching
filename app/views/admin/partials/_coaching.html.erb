<div class="p-6 max-w-7xl mx-auto bg-gray-100 p-4 rounded-md space-y-2">

  <table class="min-w-full divide-y divide-gray-300 border border-gray-300 mb-6">
	<thead class="bg-gray-50 w-full">
	<tr>
	  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/3">Title</th>
	  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Content</th>
	  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
	</tr>
	</thead>
	<tbody class="bg-white divide-y divide-gray-200 w-full" id="categories">
	<% @coaching.each do |coach| %>
	  <tr>
		<td><%= coach.title %></td>
		<td><%= coach.description.truncate(80) %></td>
		<td class="px-8 py-4 whitespace-nowrap text-sm font-medium">
		  <%= link_to "Edit", edit_coaching_path(coach), class: "p-3 bg-scb-blue text-white py-2 px-4 rounded mr-2" %>
		  <%= link_to "Delete", coaching_path(coach), method: :delete, class: "p-3 bg-red-700 text-white py-2 px-4 rounded" %>
		</td>
	  </tr>
	<% end %>
	</tbody>
  </table>
  <%= link_to "Add new course", new_coaching_path, class: "bg-scb-blue text-white py-2 px-4 rounded" %>
</div>