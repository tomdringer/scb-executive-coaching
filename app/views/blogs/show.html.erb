<% if @blog.present? %>
  <% content_for :meta_title, "#{@blog.title}" %>
  <% content_for :meta_description, @blog.description %>
  <% content_for :meta_image, "#{url_for(@blog.preview)}" %>

  <div class="mx-auto max-w-7xl p-6 bg-scb-white text-left">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <img src="<%= url_for(@blog.preview) %>" alt="<%= @blog.title %>" class="w-full h-96 object-cover rounded-lg">

    <div class="mt-6">
      <h1 class="text-4xl mb-3"><%= @blog.title %></h1>
      <h2><%= @blog.body&.html_safe %></h2>
    </div>

    <!-- <%# if @blog.category.name.present? %>
      <div class="w-full mt-6">
        <h1 class="text-4xl mb-3"><%#= @blog.category %></h1>
        <p><%#= @blog.category.name %></p>
      </div>
    <%# end %>-->

    <%= link_to "Edit this blog", edit_blog_path(@blog), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to blogs", blogs_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this blog", @blog, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium bg-red-700 text-scb-white" %>
    </div>
  </div>
<% else %>
  <p>Blog not found.</p>
<% end %>