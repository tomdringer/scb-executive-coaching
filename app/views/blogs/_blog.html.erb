<div  id="<%= dom_id blog %>" class="max-w-sm bg-white border border-gray-200 rounded-lg shadow">
  <a href="#">
    <% if blog.preview.present? %>
    <img class="rounded-t-lg" src="<%= url_for(blog.preview) %>" alt="" />
    <% end %>
  </a>
  <div class="p-5">
    <%= link_to  blog do %>
      <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-scb-black"><%= blog.title %></h5>
    <% end %>
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= blog.description %></p>
    <%= link_to blog, class: "inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-scb-blue rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" do %>
      <span>Read more</span>
      <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
      </svg>
    <% end %>
  </div>
</div>

