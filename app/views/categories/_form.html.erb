<%= form_with(model: category, local: true, data: { turbo_frame: "category_form" }) do |form| %>
  <% if category.errors.any? %>
	<div class="error_messages">
	  <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>
	  <ul>
		<% category.errors.full_messages.each do |message| %>
		  <li><%= message %></li>
		<% end %>
	  </ul>
	</div>
  <% end %>

  <div class="field">
	<%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
	<%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div class="mt-3 mb-3">
	<%= form.submit class: "rounded-lg py-3 px-5 bg-scb-blue  text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>