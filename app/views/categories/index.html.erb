<div class="p-6 max-w-7xl mx-auto">
  <h1 class="text-4xl">Categories</h1>
  <button class="mb-4 bg-blue-500 text-white py-2 px-4 rounded">Add new category</button>

  <table class="min-w-full divide-y divide-gray-300 border border-gray-300">
	<thead class="bg-gray-50">
	<tr>
	  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
	  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
	</tr>
	</thead>
	<tbody class="bg-white divide-y divide-gray-200">
	<% @categories.each do |category| %>
	  <tr>
		<td class="px-8 py-4 whitespace-nowrap text-md font-medium text-gray-900"><%= category.name %></td>
		<td class="px-8 py-4 whitespace-nowrap text-sm font-medium">
		  <%= link_to "Edit", edit_category_path(category), class: "p-3 bg-scb-blue text-white py-2 px-4 rounded mr-2" %>
		  <%= link_to "Delete", category, method: :delete, class: "p-3 bg-red-700 text-white py-2 px-4 rounded" %>
		</td>
	  </tr>
	<% end %>
	</tbody>
  </table>
</div>