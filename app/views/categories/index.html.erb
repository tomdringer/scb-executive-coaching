<div class="p-6 max-w-7xl mx-auto">
  <h1 class="text-4xl mb-6">Categories</h1>

  <table class="min-w-full divide-y divide-gray-300 border border-gray-300 mb-6">
	<thead class="bg-gray-50">
	<tr>
	  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
	  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
	</tr>
	</thead>
	<tbody class="bg-white divide-y divide-gray-200" id="categories">
	<% @categories.each do |category| %>
	  <%= render category %>
	<% end %>
	</tbody>
  </table>
  <%= link_to "Add new category", new_category_path, class: "bg-scb-blue text-white py-2 px-4 rounded" %>
</div>